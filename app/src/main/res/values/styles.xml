<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 定义简约风格的样式 -->
    <style name="SimpleStyle">
        <!-- 文本颜色为黑色 -->
        <item name="android:textColor">#000000</item>
        <!-- 使用默认字体样式 -->
        <item name="android:typeface">normal</item>
        <!-- 文本大小为14sp -->
        <item name="android:textSize">14sp</item>
        <!-- 背景颜色为白色 -->
        <item name="android:background">#FFFFFF</item>
        <!-- 文本居中对齐 -->
        <item name="android:gravity">center</item>
    </style>

    <!-- 定義簡約質感的樣式 -->
    <style name="MinimalisticStyle">
        <!-- 文本颜色为深灰色 -->
        <item name="android:textColor">#333333</item>
        <!-- 使用自定義字體 -->
<!--        <item name="android:fontFamily">@font/my_custom_font</item>-->
        <!-- 文本大小為16sp -->
        <item name="android:textSize">16sp</item>
        <!-- 背景為淺灰色並帶有陰影效果 -->
        <item name="android:background">#EDEDED</item>
        <item name="android:shadowColor">#AAAAAA</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <!-- 文本居中對齊 -->
        <item name="android:gravity">center</item>
        <!-- 圓角半徑為8dp -->
        <item name="android:radius">8dp</item>
    </style>

    <!-- 定義簡約質感的LinearLayout樣式 -->
    <style name="MinimalisticLinearLayoutStyle">
        <!-- 背景為淺灰色並帶有陰影效果 -->
        <item name="android:background">#EDEDED</item>
        <item name="android:shadowColor">#AAAAAA</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <!-- 圓角半徑為8dp -->
        <item name="android:radius">8dp</item>
        <!-- 添加內邊距 -->
        <item name="android:padding">16dp</item>
    </style>

    <style name="CustomListViewStyle">
        <item name="android:divider">@color/divider_color</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonStyle_gray" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="LinearLayoutStyle">
        <!-- 背景為白色並帶有陰影效果 -->
        <item name="android:background">@drawable/rounded_border</item>
        <item name="android:shadowColor">#AAAAAA</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <!-- 圓角半徑為8dp -->
        <item name="android:radius">10dp</item>
        <!-- 添加內邊距 -->
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>




</resources>