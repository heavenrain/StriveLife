<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/context_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="比賽名稱:"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <EditText
            android:id="@+id/contest_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/context_name_text"
            android:layout_marginStart="20dp"
            android:hint="请输入名稱"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_contest_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="達成目標:"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <EditText
            android:id="@+id/contest_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_contest_success"
            android:layout_marginStart="20dp"
            android:hint="請輸入目標"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_how_much"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="進度需求:"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <EditText
            android:id="@+id/contest_how_much"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_how_much"
            android:layout_marginStart="20dp"
            android:hint="请输入需要達成量"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_contest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="時間限制:"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <EditText
            android:id="@+id/contest_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_contest_time"
            android:layout_marginStart="20dp"
            android:hint="请输入完成時間"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>